{% extends 'base.html.twig' %}

{% block title %}Nous Contacter{% endblock %}

{% block body %}



    <br> <br>     <br> <br>

    {#liste image défilant#}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{asset('images/properties/5de15b5c295e1911505440.jpg')}}" alt="First slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-black">Promo d'ouverture</h3>
                    <p>...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/bg/boutique1.jpg')}}" alt="Second slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-dark">Promo d'ouverture</h3>
                    <p>...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/properties/5dee8f94a653a776301050.jpg')}}" alt="Third slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Promo d'ouverture</h3>
                    <p>...</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Précedent </span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </div>
    {# fin liste image défilant#}
    {% for message in app.flashes('succes') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <!-- contact-area start -->
    <div class="contact-area ptb-100">
        <div class="container">
            <div class="contact-info">
                <h2 class="contact-title">informations de contact</h2>
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-12">
                        <div class="single-contact-info mb-40">
                            <div class="contact-info-icon">
                                <i class="ion-ios-location-outline"></i>
                            </div>
                            <div class="contact-info-content">
                                <p>
                                    Localisation : <br>  Sapco, Thiés.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="single-contact-info mb-40">
                            <div class="contact-info-icon">
                                <i class="ion-ios-telephone-outline"></i>
                            </div>
                            <div class="contact-info-content">
                                <p>
                                    Téléphone  : <br> +221 777794204 / 771543457
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-6 col-12">
                        <div class="single-contact-info mb-40">
                            <div class="contact-info-icon">
                                <i class="ion-ios-email-outline"></i>
                            </div>
                            <div class="contact-info-content">
                                <p>E-mail : amdy.diop@univ-thies.sn / baseydou95@gmail.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="contact-form-wrap">
                <h2 class="contact-title">entrer en contact</h2>
                <div class="contact-message">
                    {{ form_start(form) }}

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="contact-form-style contact-font-one">
                                    {{ form_row(form.firstname) }}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="contact-form-style contact-font-two">
                                    {{ form_row(form.lastname) }}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="contact-form-style contact-font-three">
                                  {{ form_row(form.phone) }}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="contact-form-style contact-font-three">
                                    {{ form_row(form.email) }}
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="contact-form-style contact-font-four">
                                  {{form_row(form.message)}}
                                    <button class="submit btn-hover" type="submit"> Envoyer</button>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>

                    <p class="form-messege"></p>
                </div>
            </div>
        </div>
    </div>
    <!-- contact-area end -->
{% endblock %}
