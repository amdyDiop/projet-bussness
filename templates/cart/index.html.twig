{% extends 'base.html.twig' %}

{% block title 'Votre Panier'%}


{% block body %}
    <br> <br>   <br> <br><br>

    {#liste image défilant#}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>

        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{asset('images/bg/guinar.jpg')}}" alt="First slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/bg/guinar1.jpg')}}" alt="Second slide" style="width: 850px;height: 480px;">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/bg/guinar2.jpg')}}" alt="Third slide" style="width: 850px;height: 480px;">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/bg/guinar3.jpg')}}" alt="Third slide" style="width: 850px;height: 480px;">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Précedent </span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </div>
    {# fin liste image défilant#}
<!-- shopping-cart-area start -->
<div class="cart-main-area pt-80 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="cart-heading text-white "><strong>Votre Panier</strong></h1>
                {%if item | length %}
                    <div class="table-content table-responsive">
                        <table>
                            <thead>
                            <tr>
                                <th class="product-price">image</th>
                                <th class="product-name">Produit</th>
                                <th class="product-price">Prix</th>
                                <th class="product-quantity">Quantité</th>
                                <th class="product-subtotal">Total</th>
                                <th class="product-name">suppimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in item %}
                            <tr>
                                <td class="product-thumbnail">
                                    {% if item.produit.filename %}
                                        <a href="{{ path ('produit_show',{ id:item.produit.id, slug:item.produit.slug} ) }}">
                                        <img src="{{ vich_uploader_asset(item.produit, 'imageFile')|imagine_filter('card') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                                        </a>
                                    {% else %}
                                        <a href="#"><img src="{{ asset('assets/img/cart/1.jpg') }}" alt=""></a>
                                    {% endif %}

                                </td>
                                <td class="product-name"><a href="{{ path ('produit_show',{ id: item.produit.id, slug:item.produit.slug} ) }} ">{{ item.produit.labelle }}</td>
                                <td class="product-price"><span class="amount">{{ item.produit.prix }} Fcfa</span></td>
                                <td class="product-quantity">{{ item.quantity }}  </td>
                                <td class="product-subtotal">{{ item.quantity *item.produit.prix}} Fcfa</td>
                                <td class="product-remove"><a  href="{{path('cart_remove',{'id': item.produit.id})}}"><i class="ion-ios-trash-outline"></i></a></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                <div class="row">
                    <div class="col-md-5 ml-auto ">
                        <div class="cart-page-total">
                            <h2 >Total Panier:        {{total}} Fcfa </h2>
                            <a href="{{ path('finaliser') }}">Finaliser</a>
                            <a href="{{ path('produits') }}">Poursuivre Achat</a>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <br>
            </div>
            {% else %} <hr>
        </div>
        <p>Surprise, Votre panier est vide !</p>
        {% endif %}

    </div>
</div>
<!-- shopping-cart-area end -->







{% endblock %}
