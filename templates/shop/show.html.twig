{% extends 'base.html.twig' %}

{% block title %}Boutique Ouverte{% endblock %}

{% block body %}
    <br> <br>     <br> <br>

    {#liste image défilant#}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{asset('images/properties/5de15b5c295e1911505440.jpg')}}" alt="First slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-black">Promo d'ouverture</h3>
                    <p>...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/bg/boutique1.jpg')}}" alt="Second slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-dark">Promo d'ouverture</h3>
                    <p>...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/properties/5dee8f94a653a776301050.jpg')}}" alt="Third slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Promo d'ouverture</h3>
                    <p>...</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Précedent </span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </div>
    {# fin liste image défilant#}
    <!-- blog-area start -->
    <div class="blog-area pt-100 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="blog-sidebar">
                        <div class="sidebar-widget mb-50">
                            <h3 class="sidebar-title">Rechercher un Produit</h3>
                            <div class="sidebar-search">
                                {{ form_start(form) }}
                                {{ form_row(form.nom) }}
                                <button><i class="fa fa-search"></i></button>
                            </div>
                            {{ form_end(form, {'render_rest': false}) }}

                        </div>
                        <div class="sidebar-widget mb-45">
                            <h3 class="sidebar-title">Options de ma Boutique </h3>
                            <div class="sidebar-categories">
                                <ul>
                                    <li><a href="{{ path('add_produit_boutique',{id:boutiques.id}) }}">Ajouter un  Produit <span></span></a></li>
                                    <li><a href="#">Detailt des Ventes  <span></span> </a></li>

                                </ul>
                            </div>
                        </div>
                        <div class="sidebar-widget mb-50">
                            <h3 class="sidebar-title">Produits Récents</h3>
                            <div class="sidebar-top-rated-all">
                                {% for produits in produits[3:] %}
                                <div class="sidebar-top-rated mb-30">
                                    <div class="single-top-rated">
                                        <div class="top-rated-img">

                                            {% if produits.filename %}
                                                <img src="{{ vich_uploader_asset(produits, 'imageFile')|imagine_filter('card') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                                            {% else %}
                                                <a href="#"><img src="{{ asset('assets/img/product/sidebar-product/1.jpg') }}" alt=""></a>
                                            {% endif %}
                                        </div>
                                        <div class="top-rated-text">
                                            <span>{{produits.createdAt | date("d/m/Y") }}</span>
                                            <h4><a href="#">{{produits.labelle}}</a></h4>
                                        </div>
                                    </div>
                                </div>
                                    {% else %}
                                        <h3 class="sidebar-title"> Votre Boutique est Vide Ajouter des Produits </h3>
                                {% endfor  %}


                            </div>
                        </div>

                        <div class="sidebar-widget mb-40">
                            <h3 class="sidebar-title"> Réseaux Sociaux</h3>
                            <div class="social-network">
                                <a href="#">
                                    <i class="ion-social-twitter"></i>
                                </a>
                                <a href="#">
                                    <i class="ion-social-tumblr"></i>
                                </a>
                                <a href="#">
                                    <i class="ion-social-facebook"></i>
                                </a>
                                <a href="#">
                                    <i class="ion-social-instagram-outline"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="blog-details-style">
                        <div class="blog-part">
                            {% if boutiques.filename %}
                                <img src="{{ vich_uploader_asset(boutiques, 'imageFile')|imagine_filter('boutique_icon') }}"  alt ="card-img-top"  style="width:100%; height:343px;" >
                            {% else %}
                                <img src="{{ asset('assets/img/blog/blog-details.jpg') }}" alt="news">
                            {% endif %}
                            <div class="blog-info-details mt-20">
                                <h3>{{boutiques.description}}</h3>
                            </div>
                        </div>
                    </div>
                        {#listes des produit mise en ligne #}
                    <div class="shop-product-content tab-content">
                        <div id="grid-5-col1" class="tab-pane fade active show">
                            <div class="row custom-row">
                              {% for produit in produits %}
                                <div class="custom-col-5 custom-col-style">
                                    <div class="single-product mb-35">
                                        <div class="product-img">

                                            {% if produit.filename %}
                                                <img src="{{ vich_uploader_asset(produit, 'imageFile')|imagine_filter('produit_boutique') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                                            {% else %}
                                                <a href="#"><img src="{{ asset('assets/img/shop/shop-grid-1/1.jpg') }}" alt=""></a>
                                            {% endif %}
                                            <span>Vente</span>
                                            <div class="product-action">
                                                <a title="Wishlist" class="animate-left" href="#"><i class="ion-ios-heart-outline"></i></a>
                                                <a title="Quick View" data-toggle="modal" data-target="#exampleModal" class="animate-right" href="#"><i class="ion-ios-eye-outline"></i></a>
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <div class="product-title-price">
                                                <div class="product-title">
                                                    <h4><a href="product-details-6.html"></a></h4>
                                                </div>
                                                <div class="product-price">
                                                    <span>{{produit.prix}} Cfa</span>
                                                </div>
                                            </div>
                                            <div class="product-cart-categori">
                                                <div class="product-cart">
                                                    <span>{{produit.labelle}}</span>
                                                </div>
                                                <div class="product-categori">
                                                    <a href="{{ path('produit_edit',{id:produit.id,slug:produit.slug}) }}"><i class="ion-bag"></i> Modifier </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                </div>
                    {#fin listes des produit mise en ligne #}
            </div>
        </div>
      </div>
    </div>
    <!-- blog-area end -->
{% endblock %}
