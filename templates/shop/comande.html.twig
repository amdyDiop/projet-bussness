{% extends 'base.html.twig' %}

{% block title 'Produits Commandé '%}


{% block body %}
    <br> <br>     <br> <br>

    {#liste image défilant#}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{asset('images/properties/5de15b5c295e1911505440.jpg')}}" alt="First slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-black">Promo d'ouverture</h3>
                    <p>...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/bg/boutique1.jpg')}}" alt="Second slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-dark">Promo d'ouverture</h3>
                    <p>...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/properties/5dee8f94a653a776301050.jpg')}}" alt="Third slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Promo d'ouverture</h3>
                    <p>...</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Précedent </span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </div>
    {# fin liste image défilant#}
    <!-- shopping-cart-area start -->
    <div class="cart-main-area pt-80 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h1 class="cart-heading text-white "><strong>Produits Commandés</strong></h1>
                    {%if commandes | length %}
                    <div class="table-content table-responsive">
                        <table>
                            <thead>
                            <tr>
                                <th class="product-price">image</th>
                                <th class="product-name">Produit</th>
                                <th class="product-price">Prix</th>
                                <th class="product-quantity">Quantité</th>
                                <th class="product-subtotal">Total</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for key,produit in commandes %}
                                <tr>
                                    <td class="product-thumbnail">
                                    </td>
                                    <td class="product-name"><a href=""></a></td>
                                    <td class="product-price"><span class="amount"></span></td>
                                    <td class="product-quantity"></td>
                                    <td class="product-subtotal"></td>
                                   {# <td class="product-remove"><a  href="{{path('cart_remove',{'id': item.produit.id})}}"><i class="ion-ios-trash-outline"></i></a></td>#}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-5 ml-auto ">
                            <div class="cart-page-total">
                                <h2 >Total:        {{total}} Fcfa </h2>
                                <a href="{{ path('finaliser') }}">Valider</a>

                                <br>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <br>
                </div>
                {% else %} <hr>
            </div>
            <p> Pas de Commande !</p>
            {% endif %}

        </div>
    </div>
    <!-- shopping-cart-area end -->







{% endblock %}
