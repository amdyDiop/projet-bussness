{% extends 'base.html.twig' %}

{% block title %}Boutique Ouverte{% endblock %}

{% block body %}


    <div class="shop-page-wrapper hidden-items padding-filter">
        <div class="container-fluid">

            {# filtre gauche #}
            <div class="shop-filters-left">
                <div class="shop-sidebar">
                    <div class="sidebar-widget mb-50">
                        <h3 class="sidebar-title">Rechercher une  Boutique </h3>
                        {{ form_start(form) }}
                        <div class="sidebar-search">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="sidebar-search">
                            {{ form_row(form.ville) }}
                            <button><i class="fa fa-search"></i></button>
                        </div>
                        {{ form_end(form, {'render_rest': false}) }}

                </div>
                        {#produit les mieux noté#}
                    <div class="sidebar-widget mb-50">
                        <h3 class="sidebar-title">Top Produits</h3>
                        <div class="sidebar-top-rated-all">
                            {% for best in best %}
                            <div class="sidebar-top-rated mb-30">
                                <div class="single-top-rated">
                                    <div class="top-rated-img">

                                        {% if best.filename %}
                                            <a>
                                                <img src="{{ vich_uploader_asset(best, 'imageFile')|imagine_filter('card') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                                            </a>
                                        {% else %}
                                            <img src="{{ asset('assets/img/product/sidebar-product/1.jpg') }}" alt="">                                        {% endif %}

                                    </div>
                                    <div class="top-rated-text">
                                        <h4><a href="{{ path('produit_show',{id:best.id,slug:best.slug}) }}">{{best.labelle}}</a></h4>
                                        <div class="top-rated-rating">
                                            <ul>
                                                <li><i class="reting-color ion-android-star"></i></li>
                                                <li><i class="reting-color ion-android-star"></i></li>
                                                <li><i class="ion-android-star-outline"></i></li>
                                                <li><i class="ion-android-star-outline"></i></li>
                                                <li><i class="ion-android-star-outline"></i></li>
                                            </ul>
                                        </div>
                                        <span>{{ best.getFormatPrice() }} Fcfa</span>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            {# fin filtre gauche #}

            {# fin contenu de la page#}
            <div class="shop-filters-right">
                <div class="shop-bar-area pb-60">
                    <div class="shop-bar">
                        <div class="shop-found-selector">
                            <div class="shop-found">
                                <p><span>4</span> Boutiques Trouvées  Sur <span>4</span></p>
                            </div>

                        </div>
                        <div class="shop-filter-tab">
                            <div class="shop-filter">
                                <a class="shop-filter-active" href="#">Filtre<i class="ion-android-options"></i></a>
                            </div>
                            <div class="shop-tab nav" role=tablist>
                                <a class="active" href="#grid-5-col1" data-toggle="tab" role="tab" aria-selected="false">
                                    <i class="ion-android-apps"></i>
                                </a>
                                <a href="#grid-5-col2" data-toggle="tab" role="tab" aria-selected="true">
                                    <i class="ion-android-menu"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="shop-product-content tab-content">
                    <div id="grid-5-col1" class="tab-pane fade active show">
                        <div class="row custom-row">
                            {# miniature de tout les boutiques #}
                            {% for shop in boutiques %}
                                {#fenetre modal#}
                                <div class="modal fade" id="modalProduit{{ shop.id }}" tabindex="-1" role="dialog" aria-hidden="true">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span class="ion-android-close" aria-hidden="true"></span>
                                    </button>
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <div class="qwick-view-left">
                                                    <div class="quick-view-learg-img">
                                                        <div class="quick-view-tab-content tab-content">
                                                            <div class="tab-pane active show fade" id="modal1" role="tabpanel">
                                                                {% if shop.filename %}
                                                                    <a>
                                                                    <img src="{{ vich_uploader_asset(shop, 'imageFile')|imagine_filter('thumb') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                                                                    </a>
                                                                {% else %}
                                                                    <img src="{{ asset('assets/img/quick-view/l3.jpg') }}" alt="">
                                                                {% endif %}
                                                            </div>
                                                            <div class="tab-pane fade" id="modal2" role="tabpanel">
                                                                <img src="{{ asset('assets/img/quick-view/l2.jpg') }}" alt="">
                                                            </div>
                                                            <div class="tab-pane fade" id="modal3" role="tabpanel">
                                                                <img src="{{ asset('assets/img/quick-view/l3.jpg') }}" alt="">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="quick-view-list nav" role=tablist>
                                                        <a class="active" href="#modal1" data-toggle="tab" role="tab" aria-selected="true">
                                                            <img src="{{ asset('assets/img/quick-view/s1.jpg') }}" alt="">
                                                        </a>
                                                        <a href="#modal2" data-toggle="tab" role="tab" aria-selected="false">
                                                            <img src="{{ asset('assets/img/quick-view/s2.jpg') }}" alt="">
                                                        </a>
                                                        <a href="#modal3" data-toggle="tab" role="tab" aria-selected="false">
                                                            <img src="{{ asset('assets/img/quick-view/s3.jpg') }}" alt="">
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="qwick-view-right">
                                                    <div class="qwick-view-content">
                                                        <h3>{{ shop.nomBoutique}}</h3>
                                                        <div class="price">
                                                            <span class="new"> Cfa</span>
                                                            <span class="old">3500 Cfa </span>
                                                        </div>
                                                        <div class="rating-number">
                                                            <div class="quick-view-rating">
                                                                <i class="ion-ios-star red-star"></i>
                                                                <i class="ion-ios-star red-star"></i>
                                                                <i class="ion-android-star-outline"></i>
                                                                <i class="ion-android-star-outline"></i>
                                                                <i class="ion-android-star-outline"></i>
                                                            </div>
                                                            <div class="quick-view-number">
                                                                <span>4 Ratting (S)</span>
                                                            </div>
                                                        </div>
                                                        <p> {{shop.description}}.</p>
                                                        <div class="quickview-plus-minus">
                                                            <div class="quickview-btn-cart">
                                                                <a class="btn-hover-black"  href="{{ path('shop_show',{id:shop.id, slug: shop.slug}) }}">Visiter la Boutique</a>
                                                            </div>
                                                            <div class="quickview-btn-wishlist">
                                                                <a class="btn-hover" href="#"><i class="ion-ios-heart-outline"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {# fin fenetre modal#}
                            <div class="custom-col-5 custom-col-style">
                                <div class="single-product mb-35">
                                    <div class="product-img">
                                        {% if shop.filename %}
                                            <img src="{{ vich_uploader_asset(shop, 'imageFile')|imagine_filter('thumb') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                                        {% else %}
                                            <img src="{{ asset('assets/img/quick-view/l3.jpg') }}" alt="">
                                        {% endif %}                                        <div class="product-action">
                                            <a title="Wishlist" class="animate-left" href="#"><i class="ion-ios-heart-outline"></i></a>
                                            <a title="Quick View" data-toggle="modal" data-target="#modalProduit{{ shop.id }}" class="animate-right" href="#"><i class="ion-ios-eye-outline"></i></a>
                                        </div>
                                    </div>
                                    <div class="product-content">
                                        <div class="product-title-price">
                                            <div class="product-title">
                                                <h4><a href="{{ path('shop_show',{id:shop.id, slug:shop.slug}) }}"><strong>{{shop.nomBoutique}}</strong> </a></h4>
                                            </div>
                                            <div class="product-price">
                                                <span>{{shop.ville}}</span>
                                            </div>
                                        </div>
                                        <div class="product-cart-categori">
                                                <span>{{shop.adresse}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {% endfor %}
                            {# fin miniature de tout les boutiques #}
                        </div>
                    </div>
