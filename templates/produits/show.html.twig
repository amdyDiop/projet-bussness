{% extends 'base.html.twig' %}

{% block title%}

   {{ produits.labelle}}

{% endblock %}



{% block body %}



   <div class="breadcrumb-area pt-205 pb-210 bg-img" style="background-image: url({{ asset('assets/img/bg/breadcrumb.jpg') }})">
      <div class="container">
         <div class="breadcrumb-content">
            <h2>shop</h2>
            <ul>
               <li><a href="#">home</a></li>
               <li> shop </li>
            </ul>
         </div>
      </div>
   </div>
   <br>
<br>
<div class="wrapper">
   <div class="breadcrumb-area bg-img border-top-1 pt-55">
      <div class="container">
         <div class="breadcrumb-content-2">
            <ul>
               <li><a class="active" href="{{ path('home') }}">Acceuil</a></li>
               <li><a class="active" href="{{path('produits')}}">Produits </a></li>
               <li>{{ produits.getLabelle()}}</li>
            </ul>
         </div>
      </div>
   </div>
   <div class="product-details ptb-100 pb-90">
      <div class="container">
   <div class="row">
      <div class="col-md-12 col-lg-7 col-12">
         <div class="product-details-img-content">
            <div class="product-details-tab mr-70">
               <div class="product-details-large tab-content">
                  <div class="tab-pane active show fade" id="pro-details1" role="tabpanel">
                     <div class="easyzoom easyzoom--overlay">
                           {% if produits.filename %}
                           <a href="{{ vich_uploader_asset(produits, 'imageFile')|imagine_filter('detail') }}">
                              <img src="{{ vich_uploader_asset(produits, 'imageFile')|imagine_filter('detail') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                           {% else %}
                             <a href="{{ asset('assets/img/product-details/bl1.jpg') }}">
                              <img src="{{ asset('assets/img/product-details/l1.jpg') }}" alt="">
                           {% endif %}

                        </a>
                     </div>
                  </div>
                  <div class="tab-pane fade" id="pro-details2" role="tabpanel">
                     <div class="easyzoom easyzoom--overlay">
                        <a href="{{ asset('assets/img/product-details/bl2.jpg') }}">
                           <img src="{{ asset('assets/img/product-details/l2.jpg') }}" alt="">
                        </a>
                     </div>
                  </div>
                  <div class="tab-pane fade" id="pro-details3" role="tabpanel">
                     <div class="easyzoom easyzoom--overlay">
                        <a href="{{ asset('assets/img/product-details/bl3.jpg') }}">
                           <img src="{{ asset('assets/img/product-details/l3.jpg') }}" alt="">
                        </a>
                     </div>
                  </div>
                  <div class="tab-pane fade" id="pro-details4" role="tabpanel">
                     <div class="easyzoom easyzoom--overlay">
                        <a href="{{ asset('assets/img/product-details/bl4.jpg') }}">
                           <img src="{{ asset('assets/img/product-details/l4.jpg') }}" alt="">
                        </a>
                     </div>
                  </div>
               </div>
               <div class="product-details-small nav mt-12 main-product-details" role=tablist>
                  <a class="active mr-12" href="#pro-details1" data-toggle="tab" role="tab" aria-selected="true">
                     <img src="{{ asset('assets/img/product-details/s1.jpg') }}" alt="">
                  </a>
                  <a class="mr-12" href="#pro-details2" data-toggle="tab" role="tab" aria-selected="true">
                     <img src="{{ asset('assets/img/product-details/s2.jpg') }}" alt="">
                  </a>
                  <a class="mr-12" href="#pro-details3" data-toggle="tab" role="tab" aria-selected="true">
                     <img src="{{ asset('assets/img/product-details/s3.jpg') }}" alt="">
                  </a>

               </div>
            </div>
         </div>
      </div>
      <div class="col-md-12 col-lg-5 col-12">
         <div class="product-details-content">
            <h3>{{produits.labelle}}</h3>
            <div class="rating-number">
               <div class="quick-view-rating">
                  <i class="ion-ios-star red-star"></i>
                  <i class="ion-ios-star red-star"></i>
                  <i class="ion-android-star-outline"></i>
                  <i class="ion-android-star-outline"></i>
                  <i class="ion-android-star-outline"></i>
               </div>

            </div>
            <div class="details-price">
               <h3>Poids: </h3>   <span> {{produits.poids}} Kg</span>
            </div>
            <div class="details-price">
               <h3>Prix: </h3>   <span>{{produits.getFormatPrice()}} Fcfa </span>
            </div>
            <div class="details-price">
               <h3>Mise en ligne: </h3>   <span>{{produits.getCreatedAt() |date('d-m-y h:i')}}  </span>
            </div>
            <div class="details-price">
               <h3>Stock restant : </h3>   <span>{{produits.getStock()}}  </span>
            </div>

            <p>{{ produits.description }}</p>

            <div class="quickview-plus-minus">
               <div class="quickview-btn-cart">
                  <a class="btn-hover-black"href="{{ path ('cart_add',{ id:produits.id} ) }} ">Ajouter</a>
                  <a class="btn-hover-black" href="{{ path('produits') }}">Poursuivre </a>
               </div>

            </div>
<br> <br>

            <div class="product-share">
               <ul>
                  <li class="categories-title">Share :</li>
                  <li>
                     <a href="#">
                        <i class="ion-social-twitter"></i>
                     </a>
                  </li>
                  <li>
                     <a href="#">
                        <i class="ion-social-tumblr"></i>
                     </a>
                  </li>
                  <li>
                     <a href="#">
                        <i class="ion-social-facebook"></i>
                     </a>
                  </li>
                  <li>
                     <a href="#">
                        <i class="ion-social-instagram-outline"></i>
                     </a>
                  </li>
               </ul>
            </div>
         </div>
      </div>
   </div>
   <div class="product-description-review-area pb-100">
      <div class="container">
         <div class="product-description-review text-center">
            <div class="description-review-title nav" role=tablist>
               <a class="active" href="#pro-dec" data-toggle="tab" role="tab" aria-selected="true">
                  Description
               </a>
            </div>
            <div class="description-review-text tab-content">
               <div class="tab-pane active show fade" id="pro-dec" role="tabpanel">
                  <p> {{ produits.description }}</p>
               </div>

            </div>
         </div>
      </div>
   </div>
   <div class="product-collection-area pb-60">
      <div class="container">
         <div class="section-title text-center mb-55">
            <h2>Meilleurs Produits</h2>
         </div>
         <div class="row">
            <div class="new-collection-slider owl-carousel">

               {% for best in best  %}
               <div class="col-md-3 col-lg-3 col-sm-4 col-xs-12">
                  <div class="single-product mb-35">
                     <div class="product-img">
                        {% if best.filename %}
                           <img src="{{ vich_uploader_asset(best, 'imageFile')|imagine_filter('thumb') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                        {% else %}
                         <img src="{{ asset('assets/img/product/list-img/1.jpg') }}" alt="">
                        {% endif %}
                        <span>top</span>
                        <div class="product-action">
                           <a title="Wishlist" class="animate-left" href="#"><i class="ion-ios-heart-outline"></i></a>
                           <a title="Quick View" data-toggle="modal" data-target="#exampleModal" class="animate-right" href="#"><i class="ion-ios-eye-outline"></i></a>
                        </div>
                     </div>
                     <div class="product-content">
                        <div class="product-title-price">
                           <div class="product-title">
                              <h4><a href="{{path('produit_show',{id: best.id,slug:best.slug})}}">{{best.labelle}}</a></h4>
                           </div>
                           <div class="product-price">
                              <span>{{ best.getFormatPrice() }} Fcfa</span>
                           </div>
                        </div>
                        <div class="product-cart-categori">
                           <div class="product-cart">
                              <span>Ajouter au Panier </span>
                           </div>
                           <div class="product-categori">
                              <a href="{{ path('cart_add',{id:best.id}) }}"><i class="ion-bag"></i> Ajouter au Panier </a>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               {% endfor  %}
            </div>
         </div>
      </div>
   </div>
</div>
{% endblock %}



