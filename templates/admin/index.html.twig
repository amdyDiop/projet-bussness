{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}{% endblock %}


{% block stylesheets %}{% endblock %}

    {% block contenue %}
        <!-- Main content -->
        <!-- Main content -->
        <section class="content">
            <!-- detail des vente membres boutique et produit -->
            <div class="row">
                <!--nombre de boutique-->
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-red"><i class="fa fa-address-card-o"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Boutiques</span>
                            <span class="info-box-number">{{nombreBoutique}}</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>

                <!--nombre de produit-->
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-red"><i class="fa fa-cart-plus"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Produits</span>
                            <span class="info-box-number">{{nombreProduit}}</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>

                <!-- nombre de vente -->

                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-green"><i class="fa fa-dollar"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Vente</span>
                            <span class="info-box-number">{{vente}}</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>
                <!-- Membres -->

                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Nombre d'inscrits</span>
                            <span class="info-box-number">{{nombreUser}}</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>

            </div>

            <div class="row">
                <!-- Left col -->
                <div class="col-md-12">
                    <!-- MAP & BOX PANE -->
                    <div class="box box-success">

                        <!-- /.box-header -->
                        <div class="box-body no-padding">

                            {% for message in app.flashes('succes') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            {#  contenue du block contenue fiii lay affiché  baye fall bi #}

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                    <div class="row">

                        <div class="col-md-4">
                            <!-- Liste produit -->
                            <div class="box box-warning direct-chat direct-chat-warning">

                                <!-- /.box-header -->
                                <div class="box-body">
                                    <!-- produit LISTE -->
                                    <div class="box box-primary">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">Produit Récents</h3>

                                            <div class="box-tools pull-right">
                                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                                                </button>
                                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                                            </div>
                                        </div>
                                        <!-- /.box-header -->
                                        <div class="box-body">
                                            <ul class="products-list product-list-in-box">
                                                {% for produit in newProduit %}
                                                <li class="item">
                                                    <div class="product-img">
                                                        {% if produit.filename %}
                                                            <a href="">
                                                                <img src="{{ vich_uploader_asset(produit, 'imageFile')|imagine_filter('card') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                                                            </a>
                                                        {% else %}
                                                            <a href="#"><img src="{{ asset('assets/img/cart/1.jpg') }}" alt=""></a>
                                                        {% endif %}
                                                    </div>
                                                    <div class="product-info">

                                                        <a href="javascript:void(0)" class="product-title">{{ produit.labelle }}

                                                            <span class="label label-warning pull-right">{{ produit.prix}} Fcfa</span></a>
                                                        <span class="product-description">
                                                                {{produit.createdAt|date('d,M,y')  }}
                                                          </span>
                                                        <span class="product-description">
                                                          </span>
                                                        {% endfor %}
                                                    </div>
                                                </li>


                                            </ul>
                                        </div>
                                        <!-- /.box-body -->
                                        <div class="box-footer text-center">
                                            <a href="{{path('produit_index')}}" class="uppercase">Voir tous les produits</a>
                                        </div>
                                        <!-- /.box-footer -->
                                    </div>
                                </div>
                            </div>
                            <!--/.direct-chat -->
                        </div>
                        <div class="col-md-4">
                            <!-- Liste Boutique -->
                            <div class="box box-warning direct-chat direct-chat-warning">

                                <!-- /.box-header -->
                                <div class="box-body">
                                    <!-- boutique LISTE -->
                                    <div class="box box-primary">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">Boutique Récents</h3>

                                            <div class="box-tools pull-right">
                                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                                                </button>
                                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                                            </div>
                                        </div>
                                        <!-- /.box-header -->
                                        <div class="box-body">
                                            <ul class="products-list product-list-in-box">
                                                {% for boutique in newBoutique %}
                                                <li class="item">
                                                    <div class="product-img">
                                                        {% if boutique.filename %}
                                                            <a href="">
                                                                <img src="{{ vich_uploader_asset(boutique, 'imageFile')|imagine_filter('card') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                                                            </a>
                                                        {% else %}
                                                            <a href="#"><img src="{{ asset('assets/img/cart/1.jpg') }}" alt=""></a>
                                                        {% endif %}
                                                    </div>
                                                    <div class="product-info">

                                                        <a href="javascript:void(0)" class="product-title">{{boutique.nomBoutique}}

                                                            <span class="label label-warning pull-right">{{boutique.ville}}</span></a>
                                                        <span class="product-description">
                                                         {{boutique.description}}
                                                          </span>
                                                        <span class="product-description">
                                                         {{boutique.createdAt|date('d,M,Y')}}
                                                          </span>
                                                        {% endfor %}
                                                    </div>
                                                </li>


                                            </ul>
                                        </div>
                                        <!-- /.box-body -->
                                        <div class="box-footer text-center">
                                            <a href="{{path('boutique_index')}}" class="uppercase">Voir tous les Boutiques</a>
                                        </div>
                                        <!-- /.box-footer -->
                                    </div>
                                </div>
                            </div>
                            <!--/.direct-chat -->
                        </div>




                        <!--last membre -->
                        <div class="col-md-4">
                            <!-- USERS LIST -->
                            <div class="box box-danger">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Dernier membre</h3>

                                    <div class="box-tools pull-right">
                                        <span class="label label-danger"></span>
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                                        </button>
                                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body no-padding">
                                    <ul class="users-list clearfix">
                                        {% for user in users %}
                                        <li>
                                            <img src="{{ asset('assets/img/quick-view/l3.jpg') }}"  class="img-circle" alt="User Image">
                                            <a class="users-list-name" href="#">{{ user.prenom }} {{ user.nom }}</a>
                                        <span class="users-list-date">{{ user.createdAt|date('d,m,y') }}</span>
                                        </li>
                                       {% endfor %}
                                    </ul>
                                    <!-- /.users-list -->
                                </div>
                                <!-- /.box-body -->
                                <div class="box-footer text-center">
                                    <a href="{{path('user_index')}}" class="uppercase">Voir tout les utilisateurs</a>
                                </div>
                                <!-- /.box-footer -->
                            </div>
                            <!--/.box -->
                        </div>


                    </div>
                    <!-- /.row -->

                    <!-- TABLE: Dernier commande -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Dernières commandes</h3>

                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="table-responsive">
                                <table class="table no-margin">
                                    <thead>
                                    <tr>
                                        <th>Numéro Commnande</th>
                                        <th>Commandé le</th>
                                        <th>Client</th>
                                        <th>Email</th>
                                        <th>Status</th>

                                    </tr>
                                    </thead>
                                    <tbody >

                                    {% for commande in commande  %}
                                        <tr>
                                            <td>{{ commande.numcommande() }}</td>
                                            <td>{{ commande.dateCommande|date('d-m-y h:i') }}</td>

                                            <td>{{ commande.getUser().prenom }} {{ commande.getUser().nom }}</td>
                                            <td>{{ commande.getUser().email }} </td>

                                            <td><span class="label label-warning">{{commande.livrer}}</span></td>

                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer clearfix">
                            <a href="javascript:void(0)" class="btn btn-sm btn-default btn-flat pull-right">Voir les Commandes</a>
                        </div>
                        <!-- /.box-footer -->
                    </div>
                    <!-- /.box -->
                </div>

            </div>

            <!-- /.row -->
        </section>
        <!-- /.content -->
        <!-- /.content -->
    {% endblock %}

