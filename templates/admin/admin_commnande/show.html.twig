{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}commande: {{ commande.numcommande }} {% endblock %}

{% block contenue %}

    <div class="cart-main-area pt-80 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h1 class="description text-black"><strong> Commande numéro :{{ commande.numcommande }}  </strong></h1>
                   <h1 class="description text-black"><strong> Client : {{ commande.getUser().email }} </strong></h1>


                   <div class="table-content table-responsive">
                        <table>
                            <thead>
                            <tr>
                                <th class="product-price">image</th>
                                <th class="product-name">Produit</th>
                                <th class="product-price">Prix</th>
                                <th class="product-quantity">Quantité</th>
                                <th class="product-subtotal">Total</th>
                                <th class="product-name">Boutique</th>
                            </tr>
                            </thead>
                            <tbody>

                                {% for key,value  in commande.produits %}

                                <tr>
                                    <td class="product-thumbnail">
                                        {% if commande.produits[key].filename %}
                                                <img src="{{ vich_uploader_asset(commande.produits[key], 'imageFile')|imagine_filter('card') }}"  alt ="card-img-top"  style="width:100%; height:auto;" >
                                        {% else %}
                                            <a href="#"><img src="{{ asset('assets/img/cart/1.jpg') }}" alt=""></a>
                                        {% endif %}

                                    </td>
                                    <td class="product-name"> {{ commande.produits[key].labelle }}</td>
                                    <td class="product-price"><span class="amount">{{ commande.produits[key].prix }} Fcfa</span></td>
                                    <td>{{ commande.quantity[key] }}</td>
                                    <td>{{ commande.quantity[key] * commande.produits[key].prix }}  </td>
                                    <td class="product-name">{{ commande.produits[key].boutique.nomBoutique }} </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                       <div class="row">
                           <div class="col-md-5 ml-auto ">
                               <div class="cart-page-total">
                                   <h2 >Total Panier:        {{commande.tht}} Fcfa </h2>
                                   <br>
                               </div>
                           </div>
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- shopping-cart-area end -->
{% endblock %}