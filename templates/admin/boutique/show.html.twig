{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Boutique-{{ boutique.nomBoutique}}{% endblock %}

{% block contenue %}

<div class="cart-main-area pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-10">
                <h1 class="description text-black"><strong>  {{ boutique.nomBoutique }}</strong></h1>
                <div class="table-content table-responsive">
        <div class="col-sm-6">
            <table class="table table-striped table-hover">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ boutique.id }}</td>
                </tr>
                <tr>
                    <th>Boutique</th>
                    <td>{{ boutique.nomBoutique }}</td>
                </tr>

                <tr>
                    <th>Nom Vendeur</th>
                    <td>{{ boutique.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ boutique.description }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ boutique.active ? 'Yes' : 'No' }}</td>
                </tr>

                </tbody>
            </table>
            <a href="{{ path('boutique_index') }}">Retour à la Liste</a>

            <a href="{{ path('boutique_edit', {'id': boutique.id}) }}">Modifier</a>
            {{ include('admin/boutique/_delete_form.html.twig') }}
        </div>




        <div class="col-sm-6">
            <table class="table table-striped table-hover">
                <tbody>

                <tr>
                    <th>Nombre De Vente</th>
                    <td>{{ boutique.nombreDeVente }}</td>
                </tr>
                <tr>
                    <th>NumeroCompte</th>
                    <td>{{ boutique.numeroCompte }}</td>
                </tr>
                <tr>
                    <th>Prénom Vendeur</th>
                    <td>{{ boutique.prenom }}</td>
                </tr>
                <tr>
                    <th>email</th>
                    <td>{{ boutique.email }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ boutique.ville }}</td>
                </tr>
                <tr>
                    <th>Addresse</th>
                    <td>{{boutique.adresse}}</td>
                </tr>
                </tbody>
            </table>
        </div>

    </div>

            </div>
        </div>
    </div>
</div>

{% endblock %}
