{% extends 'base.html.twig' %}

{% block title %}New Produit{% endblock %}

{% block body %}
    <br> <br>   <br> <br><br>

    {#liste image défilant#}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>

            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>

            x         </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{asset('images/bg/guinar.jpg')}}" alt="First slide" style="width: 850px;height: 500px;">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/bg/guinar1.jpg')}}" alt="Second slide" style="width: 850px;height: 480px;">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/bg/guinar2.jpg')}}" alt="Third slide" style="width: 850px;height: 480px;">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('images/bg/guinar3.jpg')}}" alt="Third slide" style="width: 850px;height: 480px;">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Précedent </span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </div>
    {# fin liste image défilant#}

    <div class="checkout-area ptb-100 t">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-12">
                    {{ form_start(form) }}
                    <div class="checkbox-form">
                        <h3>Nouveau Produit  </h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    {{ form_row(form.labelle) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    {{ form_row(form.prix) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    {{ form_row(form.tva) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    {{ form_row(form.stockinit) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    {{ form_row(form.poids) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    {{ form_row(form.description) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    {{ form_row(form.imageFile) }}
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="checkout-form-list">

                                    <input type="submit"  value="Modifier"/>


                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br><br><br><br><br>
    {{ form_row(form.visible) }}
    {{ form_end(form) }}
{% endblock %}