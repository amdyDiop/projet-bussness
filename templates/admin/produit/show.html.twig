{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

<br><br><br><br>

    <h1>{{produit.labelle}}</h1>
    <div class="box ">
        <div class="box-header with-border">
            <h3 class="box-title">{{ produit.labelle }}</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                    <i class="fa fa-times"></i></button>
            </div>
        </div>

        <div class="row">
            <div class="col-4">Nom de la Produit</div>
            <div class="col-4">{{produit.labelle}}</div>

        </div>
        <div class="row">
            <div class="col-4">Prix</div>
            <div class="col-4">{{produit.getFormatPrice}}Cfa</div>

        </div>
        <div class="row">
            <div class="col-4">Stock</div>
            <div class="col-4">{{produit.Stock}}</div>

        </div>
        <div class="row">
            <div class="col-4">Stock Initial</div>
            <div class="col-4">{{produit.Stockinit}}</div>

        </div>
        <div class="row">
            <div class="col-4">Poids</div>
            <div class="col-4">{{produit.poids}}</div>

        </div>
        <div class="row">
            <div class="col-4">Visibilité</div>
            <div class="col-4">{{produit.visible}}</div>

        </div>
        <div class="row">
            <div class="col-4">Déscriptions</div>
            <div class="col-4">{{produit.description}}</div>

        </div>


        <a href="{{ path('produit_index') }}">back to list</a>

        <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

        {{ include('admin/produit/_delete_form.html.twig') }}
    </div>
{% endblock %}
