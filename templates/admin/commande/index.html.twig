{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numcommande</th>
                <th>DateCommande</th>
                <th>Tht</th>
                <th>Ttva</th>
                <th>Tttc</th>
                <th>Valider</th>
                <th>Livrer</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.numcommande }}</td>
                <td>{{ commande.dateCommande ? commande.dateCommande|date('Y-m-d') : '' }}</td>
                <td>{{ commande.tht }}</td>
                <td>{{ commande.ttva }}</td>
                <td>{{ commande.tttc }}</td>
                <td>{{ commande.valider ? 'Yes' : 'No' }}</td>
                <td>{{ commande.livrer }}</td>
                <td>{{ commande.quantity ? commande.quantity|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
